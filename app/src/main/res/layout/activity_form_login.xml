<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:theme="@style/Theme.Design.NoActionBar"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.FormLoginActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="232dp"
            android:layout_height="64dp"
            android:layout_marginVertical="100dp"
            android:src="@drawable/orange_android_bw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/form_login_username"
            style="@style/EditText"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="100dp"
            android:hint="@string/username"
            android:textColor="@color/black_overlay"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <EditText
            android:id="@+id/form_login_password"
            style="@style/EditText"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="26dp"
            android:textColor="@color/black_overlay"
            android:drawableEnd="@drawable/ic_eye"
            android:hint="@string/password"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_login_username" />

        <Button
            android:id="@+id/form_login_login"
            style="@style/ButtonConfirm"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="52dp"
            android:padding="18dp"
            android:text="@string/login"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_login_password" />

        <ProgressBar
            android:id="@+id/form_login_create_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/form_login_create_new_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_login_forgot_password"
            android:visibility="invisible"
            android:indeterminateTint="@color/white"
            />

        <TextView
            android:id="@+id/form_login_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_login_login" />

        <TextView
            android:id="@+id/form_login_create_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@string/create_new_account"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>